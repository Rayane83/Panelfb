<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion Staff - FlashbackFA Enterprise</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center space-x-3">
                    <div class="p-2 bg-gradient-to-r from-purple-600 to-pink-600 rounded-lg">
                        <i data-lucide="users" class="h-6 w-6 text-white"></i>
                    </div>
                    <div>
                        <h1 class="text-xl font-bold">Gestion Staff</h1>
                        <p class="text-xs text-gray-500">FlashbackFA Enterprise</p>
                    </div>
                </div>
                
                <div class="flex items-center space-x-4">
                    <a href="/dashboard" class="text-gray-600 hover:text-gray-700 p-2 rounded-md hover:bg-gray-50">
                        <i data-lucide="home" class="h-5 w-5"></i>
                    </a>
                    <div class="flex items-center space-x-3">
                        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png?size=128" 
                             alt="<%= user.username %>" 
                             class="w-8 h-8 rounded-full"
                             onerror="this.src='https://cdn.discordapp.com/embed/avatars/0.png'">
                        <div>
                            <p class="text-sm font-medium"><%= user.username %></p>
                            <p class="text-xs text-gray-500"><%= user.role %></p>
                        </div>
                    </div>
                    <a href="/logout" class="text-red-600 hover:text-red-700 p-2 rounded-md hover:bg-red-50">
                        <i data-lucide="log-out" class="h-5 w-5"></i>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <!-- Header Section -->
        <div class="bg-gradient-to-r from-purple-600 to-pink-600 rounded-2xl p-8 text-white mb-8">
            <h2 class="text-3xl font-bold mb-2">Gestion Staff</h2>
            <p class="text-purple-100">Gérez les employés, grades et permissions</p>
        </div>

        <!-- Stats Cards -->
        <div class="grid gap-6 md:grid-cols-4 mb-8">
            <div class="bg-white rounded-xl p-6 shadow-sm">
                <div class="flex items-center justify-between">
                    <div class="p-3 rounded-xl bg-blue-100">
                        <i data-lucide="building" class="h-6 w-6 text-blue-600"></i>
                    </div>
                    <div class="text-right">
                        <div class="text-2xl font-bold"><%= enterprises ? enterprises.length : 0 %></div>
                        <p class="text-sm text-gray-500">Entreprises</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-sm">
                <div class="flex items-center justify-between">
                    <div class="p-3 rounded-xl bg-green-100">
                        <i data-lucide="users" class="h-6 w-6 text-green-600"></i>
                    </div>
                    <div class="text-right">
                        <div class="text-2xl font-bold">
                            <% let totalEmployees = 0; %>
                            <% if (enterprises) { %>
                                <% enterprises.forEach(function(enterprise) { %>
                                    <% if (enterprise.employees) { %>
                                        <% totalEmployees += enterprise.employees.length; %>
                                    <% } %>
                                <% }); %>
                            <% } %>
                            <%= totalEmployees %>
                        </div>
                        <p class="text-sm text-gray-500">Employés</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-sm">
                <div class="flex items-center justify-between">
                    <div class="p-3 rounded-xl bg-purple-100">
                        <i data-lucide="award" class="h-6 w-6 text-purple-600"></i>
                    </div>
                    <div class="text-right">
                        <div class="text-2xl font-bold">
                            <% let totalGrades = 0; %>
                            <% if (enterprises) { %>
                                <% enterprises.forEach(function(enterprise) { %>
                                    <% if (enterprise.grades) { %>
                                        <% totalGrades += enterprise.grades.length; %>
                                    <% } %>
                                <% }); %>
                            <% } %>
                            <%= totalGrades %>
                        </div>
                        <p class="text-sm text-gray-500">Grades</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-sm">
                <div class="flex items-center justify-between">
                    <div class="p-3 rounded-xl bg-orange-100">
                        <i data-lucide="user-check" class="h-6 w-6 text-orange-600"></i>
                    </div>
                    <div class="text-right">
                        <div class="text-2xl font-bold">
                            <% let activeEmployees = 0; %>
                            <% if (enterprises) { %>
                                <% enterprises.forEach(function(enterprise) { %>
                                    <% if (enterprise.employees) { %>
                                        <% enterprise.employees.forEach(function(employee) { %>
                                            <% if (employee.status === 'Actif') activeEmployees++; %>
                                        <% }); %>
                                    <% } %>
                                <% }); %>
                            <% } %>
                            <%= activeEmployees %>
                        </div>
                        <p class="text-sm text-gray-500">Actifs</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Enterprises and Staff -->
        <div class="space-y-6">
            <% if (enterprises && enterprises.length > 0) { %>
                <% enterprises.forEach(function(enterprise) { %>
                <div class="bg-white rounded-xl shadow-sm">
                    <div class="p-6 border-b">
                        <div class="flex justify-between items-center">
                            <div>
                                <h3 class="text-lg font-semibold"><%= enterprise.name %></h3>
                                <p class="text-sm text-gray-500"><%= enterprise.type %> - Guild: <%= enterprise.guild_id %></p>
                            </div>
                            <div class="flex space-x-2">
                                <button class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm">
                                    <i data-lucide="user-plus" class="h-4 w-4 mr-1 inline"></i>
                                    Ajouter Employé
                                </button>
                                <button class="bg-purple-600 hover:bg-purple-700 text-white px-3 py-1 rounded text-sm">
                                    <i data-lucide="award" class="h-4 w-4 mr-1 inline"></i>
                                    Gérer Grades
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Grades Section -->
                    <% if (enterprise.grades && enterprise.grades.length > 0) { %>
                    <div class="p-6 border-b bg-gray-50">
                        <h4 class="font-medium mb-3">Grades disponibles</h4>
                        <div class="grid gap-3 md:grid-cols-3">
                            <% enterprise.grades.forEach(function(grade) { %>
                            <div class="bg-white p-3 rounded-lg border">
                                <div class="flex justify-between items-center">
                                    <span class="font-medium"><%= grade.name %></span>
                                    <span class="text-xs text-gray-500">Niveau <%= grade.hierarchy %></span>
                                </div>
                                <div class="text-xs text-gray-600 mt-1">
                                    <% if (grade.hourly_rate > 0) { %>
                                        Taux horaire: €<%= grade.hourly_rate %>
                                    <% } %>
                                    <% if (grade.base_salary > 0) { %>
                                        Salaire: €<%= grade.base_salary %>
                                    <% } %>
                                    <% if (grade.ca_percentage > 0) { %>
                                        CA: <%= grade.ca_percentage %>%
                                    <% } %>
                                </div>
                            </div>
                            <% }); %>
                        </div>
                    </div>
                    <% } %>

                    <!-- Employees Section -->
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50 border-b">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Employé</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Grade</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date d'embauche</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Qualifications</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                                <% if (enterprise.employees && enterprise.employees.length > 0) { %>
                                    <% enterprise.employees.forEach(function(employee) { %>
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <img src="https://cdn.discordapp.com/avatars/<%= employee.discord_id %>/avatar.png?size=64" 
                                                     alt="<%= employee.username %>" 
                                                     class="w-8 h-8 rounded-full mr-3"
                                                     onerror="this.src='https://cdn.discordapp.com/embed/avatars/0.png'">
                                                <div>
                                                    <div class="text-sm font-medium text-gray-900"><%= employee.username %></div>
                                                    <div class="text-sm text-gray-500">ID: <%= employee.discord_id %></div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            <% const grade = enterprise.grades ? enterprise.grades.find(g => g.id === employee.grade_id) : null; %>
                                            <%= grade ? grade.name : 'Aucun grade' %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <%= employee.hire_date ? new Date(employee.hire_date).toLocaleDateString('fr-FR') : 'N/A' %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="px-2 py-1 text-xs font-medium rounded-full 
                                                <%= employee.status === 'Actif' ? 'bg-green-100 text-green-800' : 
                                                    employee.status === 'Inactif' ? 'bg-red-100 text-red-800' : 
                                                    'bg-gray-100 text-gray-800' %>">
                                                <%= employee.status %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <% if (employee.qualifications && employee.qualifications.length > 0) { %>
                                                <div class="flex flex-wrap gap-1">
                                                    <% employee.qualifications.forEach(function(qual) { %>
                                                        <span class="px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded-full"><%= qual %></span>
                                                    <% }); %>
                                                </div>
                                            <% } else { %>
                                                <span class="text-gray-400">Aucune</span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                            <div class="flex space-x-2">
                                                <button class="text-blue-600 hover:text-blue-900">
                                                    <i data-lucide="edit" class="h-4 w-4"></i>
                                                </button>
                                                <button class="text-red-600 hover:text-red-900">
                                                    <i data-lucide="trash-2" class="h-4 w-4"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                                            <i data-lucide="users" class="h-8 w-8 mx-auto mb-2 text-gray-400"></i>
                                            <p>Aucun employé dans cette entreprise</p>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <% }); %>
            <% } else { %>
                <div class="bg-white rounded-xl p-12 text-center">
                    <i data-lucide="building" class="h-16 w-16 text-gray-400 mx-auto mb-4"></i>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Aucune entreprise trouvée</h3>
                    <p class="text-gray-500">Vous n'avez accès à aucune entreprise pour le moment.</p>
                </div>
            <% } %>
        </div>
    </main>

    <script>
        lucide.createIcons();
    </script>
</body>
</html>