<%- include('base', { title: title, user: user, body: `
<div class="py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- En-tête -->
        <div class="md:flex md:items-center md:justify-between">
            <div class="flex-1 min-w-0">
                <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
                    Gestion des Dotations
                </h2>
                <p class="mt-1 text-sm text-gray-500">
                    Gérez les dotations et calculs de salaires pour vos entreprises
                </p>
            </div>
            <div class="mt-4 flex md:mt-0 md:ml-4">
                <button type="button" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <i data-lucide="plus" class="h-4 w-4 mr-2"></i>
                    Nouvelle Dotation
                </button>
            </div>
        </div>

        <!-- Filtres -->
        <div class="mt-6 bg-white shadow sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <div class="grid grid-cols-1 gap-4 sm:grid-cols-4">
                    <div>
                        <label for="period-filter" class="block text-sm font-medium text-gray-700">Période</label>
                        <select id="period-filter" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                            <option value="">Toutes les périodes</option>
                            <option value="2024-01">Janvier 2024</option>
                            <option value="2024-02">Février 2024</option>
                            <option value="2024-03">Mars 2024</option>
                        </select>
                    </div>
                    <div>
                        <label for="status-filter" class="block text-sm font-medium text-gray-700">Statut</label>
                        <select id="status-filter" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                            <option value="">Tous les statuts</option>
                            <option value="Brouillon">Brouillon</option>
                            <option value="Validé">Validé</option>
                            <option value="Payé">Payé</option>
                        </select>
                    </div>
                    <div>
                        <label for="enterprise-filter" class="block text-sm font-medium text-gray-700">Entreprise</label>
                        <select id="enterprise-filter" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                            <option value="">Toutes les entreprises</option>
                        </select>
                    </div>
                    <div class="flex items-end">
                        <button type="button" class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            <i data-lucide="search" class="h-4 w-4 mr-2"></i>
                            Filtrer
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Liste des dotations -->
        <div class="mt-6 bg-white shadow overflow-hidden sm:rounded-md">
            <ul class="divide-y divide-gray-200">
                <% if (dotations && dotations.length > 0) { %>
                    <% dotations.forEach(function(dotation) { %>
                    <li>
                        <div class="px-4 py-4 sm:px-6">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0">
                                        <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
                                            <i data-lucide="calculator" class="h-5 w-5 text-indigo-600"></i>
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <div class="flex items-center">
                                            <p class="text-sm font-medium text-indigo-600 truncate">
                                                Dotation <%= dotation.period %>
                                            </p>
                                            <% if (dotation.enterprises) { %>
                                            <p class="ml-2 text-sm text-gray-500">
                                                - <%= dotation.enterprises.name %>
                                            </p>
                                            <% } %>
                                        </div>
                                        <div class="mt-1 flex items-center text-sm text-gray-500">
                                            <p>
                                                CA Total: <%= new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR' }).format(dotation.total_ca || 0) %>
                                            </p>
                                            <p class="ml-4">
                                                Salaires: <%= new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR' }).format(dotation.total_salaries || 0) %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-2">
                                    <% 
                                    let statusColor = 'gray';
                                    if (dotation.status === 'Validé') statusColor = 'green';
                                    else if (dotation.status === 'Payé') statusColor = 'blue';
                                    %>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= statusColor %>-100 text-<%= statusColor %>-800">
                                        <%= dotation.status || 'Brouillon' %>
                                    </span>
                                    <div class="flex items-center space-x-1">
                                        <button class="text-indigo-600 hover:text-indigo-900 text-sm font-medium">
                                            <i data-lucide="eye" class="h-4 w-4"></i>
                                        </button>
                                        <button class="text-gray-600 hover:text-gray-900 text-sm font-medium">
                                            <i data-lucide="edit" class="h-4 w-4"></i>
                                        </button>
                                        <button class="text-red-600 hover:text-red-900 text-sm font-medium">
                                            <i data-lucide="trash-2" class="h-4 w-4"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            
                            <% if (dotation.dotation_lines && dotation.dotation_lines.length > 0) { %>
                            <div class="mt-4">
                                <div class="text-sm text-gray-500 mb-2">
                                    <%= dotation.dotation_lines.length %> employé(s) dans cette dotation
                                </div>
                                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 text-sm">
                                    <div>
                                        <span class="font-medium text-gray-700">Runs:</span>
                                        <%= new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR' }).format(
                                            dotation.dotation_lines.reduce((sum, line) => sum + (parseFloat(line.run_amount) || 0), 0)
                                        ) %>
                                    </div>
                                    <div>
                                        <span class="font-medium text-gray-700">Factures:</span>
                                        <%= new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR' }).format(
                                            dotation.dotation_lines.reduce((sum, line) => sum + (parseFloat(line.facture_amount) || 0), 0)
                                        ) %>
                                    </div>
                                    <div>
                                        <span class="font-medium text-gray-700">Ventes:</span>
                                        <%= new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR' }).format(
                                            dotation.dotation_lines.reduce((sum, line) => sum + (parseFloat(line.vente_amount) || 0), 0)
                                        ) %>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                        </div>
                    </li>
                    <% }); %>
                <% } else { %>
                    <li>
                        <div class="px-4 py-8 text-center">
                            <i data-lucide="calculator" class="mx-auto h-12 w-12 text-gray-400"></i>
                            <h3 class="mt-2 text-sm font-medium text-gray-900">Aucune dotation</h3>
                            <p class="mt-1 text-sm text-gray-500">
                                Commencez par créer votre première dotation.
                            </p>
                            <div class="mt-6">
                                <button type="button" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                    <i data-lucide="plus" class="h-4 w-4 mr-2"></i>
                                    Nouvelle Dotation
                                </button>
                            </div>
                        </div>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
</div>
` }) %>