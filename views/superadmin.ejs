<% include('base', { title: title, user: user }, function(body) { %>
<div class="py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- En-tête -->
        <div class="md:flex md:items-center md:justify-between">
            <div class="flex-1 min-w-0">
                <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
                    Administration Système
                </h2>
                <p class="mt-1 text-sm text-gray-500">
                    Configuration et gestion avancée du système
                </p>
            </div>
            <div class="mt-4 flex md:mt-0 md:ml-4">
                <button type="button" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                    <i data-lucide="settings" class="h-4 w-4 mr-2"></i>
                    Configuration Avancée
                </button>
            </div>
        </div>

        <!-- Statistiques système -->
        <div class="mt-6">
            <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <i data-lucide="database" class="h-6 w-6 text-gray-400"></i>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">Base de données</dt>
                                    <dd class="text-lg font-medium text-gray-900">Connectée</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <i data-lucide="server" class="h-6 w-6 text-gray-400"></i>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">Serveur</dt>
                                    <dd class="text-lg font-medium text-gray-900">En ligne</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <i data-lucide="users" class="h-6 w-6 text-gray-400"></i>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">Utilisateurs actifs</dt>
                                    <dd class="text-lg font-medium text-gray-900">1</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <i data-lucide="activity" class="h-6 w-6 text-gray-400"></i>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">Uptime</dt>
                                    <dd class="text-lg font-medium text-gray-900">99.9%</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Onglets d'administration -->
        <div class="mt-6">
            <div class="border-b border-gray-200">
                <nav class="-mb-px flex space-x-8">
                    <button class="admin-tab-button border-red-500 text-red-600 whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm" data-tab="config">
                        <i data-lucide="settings" class="h-4 w-4 mr-2 inline"></i>
                        Configuration
                    </button>
                    <button class="admin-tab-button border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm" data-tab="users">
                        <i data-lucide="users" class="h-4 w-4 mr-2 inline"></i>
                        Utilisateurs
                    </button>
                    <button class="admin-tab-button border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm" data-tab="logs">
                        <i data-lucide="file-text" class="h-4 w-4 mr-2 inline"></i>
                        Logs
                    </button>
                    <button class="admin-tab-button border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm" data-tab="maintenance">
                        <i data-lucide="wrench" class="h-4 w-4 mr-2 inline"></i>
                        Maintenance
                    </button>
                </nav>
            </div>
        </div>

        <!-- Contenu des onglets -->
        <div class="mt-6">
            <!-- Onglet Configuration -->
            <div id="config-tab" class="admin-tab-content">
                <div class="bg-white shadow sm:rounded-lg">
                    <div class="px-4 py-5 sm:p-6">
                        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                            Configuration Système
                        </h3>
                        
                        <div class="space-y-6">
                            <!-- Configuration Discord -->
                            <div class="border border-gray-200 rounded-lg p-4">
                                <h4 class="text-md font-medium text-gray-900 mb-3">Configuration Discord</h4>
                                <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700">Client ID</label>
                                        <input type="text" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500 sm:text-sm" value="<%= process.env.VITE_DISCORD_CLIENT_ID || '' %>" readonly>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700">Bot Token</label>
                                        <input type="password" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500 sm:text-sm" value="••••••••••••••••" readonly>
                                    </div>
                                </div>
                            </div>

                            <!-- Configuration Base de données -->
                            <div class="border border-gray-200 rounded-lg p-4">
                                <h4 class="text-md font-medium text-gray-900 mb-3">Base de données</h4>
                                <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700">URL Supabase</label>
                                        <input type="text" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500 sm:text-sm" value="<%= process.env.VITE_SUPABASE_URL || '' %>" readonly>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700">Statut</label>
                                        <div class="mt-1 flex items-center">
                                            <div class="h-2 w-2 bg-green-400 rounded-full mr-2"></div>
                                            <span class="text-sm text-gray-900">Connectée</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Configuration des rôles -->
                            <div class="border border-gray-200 rounded-lg p-4">
                                <h4 class="text-md font-medium text-gray-900 mb-3">Mapping des rôles Discord</h4>
                                <div class="space-y-3">
                                    <div class="grid grid-cols-2 gap-4">
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700">Superadmin</label>
                                            <input type="text" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500 sm:text-sm" placeholder="ID du rôle Discord">
                                        </div>
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700">Superviseur</label>
                                            <input type="text" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500 sm:text-sm" placeholder="ID du rôle Discord">
                                        </div>
                                    </div>
                                    <div class="grid grid-cols-2 gap-4">
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700">DOT</label>
                                            <input type="text" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500 sm:text-sm" placeholder="ID du rôle Discord">
                                        </div>
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700">Patron</label>
                                            <input type="text" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500 sm:text-sm" placeholder="ID du rôle Discord">
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-4">
                                    <button type="button" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                        Sauvegarder les rôles
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Onglet Utilisateurs -->
            <div id="users-tab" class="admin-tab-content hidden">
                <div class="bg-white shadow overflow-hidden sm:rounded-md">
                    <div class="px-4 py-5 sm:px-6">
                        <h3 class="text-lg leading-6 font-medium text-gray-900">
                            Gestion des Utilisateurs
                        </h3>
                        <p class="mt-1 max-w-2xl text-sm text-gray-500">
                            Tous les utilisateurs connectés au système
                        </p>
                    </div>
                    <ul class="divide-y divide-gray-200">
                        <li>
                            <div class="px-4 py-4 sm:px-6">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10">
                                            <img class="h-10 w-10 rounded-full" src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="<%= user.username %>">
                                        </div>
                                        <div class="ml-4">
                                            <div class="flex items-center">
                                                <p class="text-sm font-medium text-indigo-600 truncate">
                                                    <%= user.username %>
                                                </p>
                                                <p class="ml-2 text-sm text-gray-500">
                                                    (Vous)
                                                </p>
                                            </div>
                                            <div class="mt-1 flex items-center text-sm text-gray-500">
                                                <p>
                                                    Rôle: <%= user.role %>
                                                </p>
                                                <p class="ml-4">
                                                    Discord ID: <%= user.id %>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="flex items-center space-x-2">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                            En ligne
                                        </span>
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                            <%= user.role %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Onglet Logs -->
            <div id="logs-tab" class="admin-tab-content hidden">
                <div class="bg-white shadow sm:rounded-lg">
                    <div class="px-4 py-5 sm:p-6">
                        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                            Logs Système
                        </h3>
                        
                        <div class="bg-gray-900 rounded-lg p-4 font-mono text-sm text-green-400 h-96 overflow-y-auto">
                            <div class="space-y-1">
                                <div>[<%= new Date().toISOString() %>] INFO: Serveur démarré sur le port 3000</div>
                                <div>[<%= new Date().toISOString() %>] INFO: Base de données connectée</div>
                                <div>[<%= new Date().toISOString() %>] INFO: Authentification Discord configurée</div>
                                <div>[<%= new Date().toISOString() %>] INFO: Utilisateur <%= user.username %> connecté</div>
                                <div>[<%= new Date().toISOString() %>] INFO: Page superadmin accédée par <%= user.username %></div>
                            </div>
                        </div>
                        
                        <div class="mt-4 flex space-x-3">
                            <button type="button" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                <i data-lucide="refresh-cw" class="h-4 w-4 mr-2"></i>
                                Actualiser
                            </button>
                            <button type="button" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                <i data-lucide="download" class="h-4 w-4 mr-2"></i>
                                Télécharger
                            </button>
                            <button type="button" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                <i data-lucide="trash-2" class="h-4 w-4 mr-2"></i>
                                Vider les logs
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Onglet Maintenance -->
            <div id="maintenance-tab" class="admin-tab-content hidden">
                <div class="bg-white shadow sm:rounded-lg">
                    <div class="px-4 py-5 sm:p-6">
                        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                            Outils de Maintenance
                        </h3>
                        
                        <div class="space-y-6">
                            <!-- Sauvegarde -->
                            <div class="border border-gray-200 rounded-lg p-4">
                                <h4 class="text-md font-medium text-gray-900 mb-3">Sauvegarde</h4>
                                <p class="text-sm text-gray-600 mb-4">
                                    Créez une sauvegarde complète de la base de données
                                </p>
                                <div class="flex space-x-3">
                                    <button type="button" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                                        <i data-lucide="download" class="h-4 w-4 mr-2"></i>
                                        Créer une sauvegarde
                                    </button>
                                    <button type="button" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                        <i data-lucide="upload" class="h-4 w-4 mr-2"></i>
                                        Restaurer
                                    </button>
                                </div>
                            </div>

                            <!-- Cache -->
                            <div class="border border-gray-200 rounded-lg p-4">
                                <h4 class="text-md font-medium text-gray-900 mb-3">Cache</h4>
                                <p class="text-sm text-gray-600 mb-4">
                                    Gérez le cache de l'application
                                </p>
                                <div class="flex space-x-3">
                                    <button type="button" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500">
                                        <i data-lucide="trash-2" class="h-4 w-4 mr-2"></i>
                                        Vider le cache
                                    </button>
                                </div>
                            </div>

                            <!-- Redémarrage -->
                            <div class="border border-red-200 rounded-lg p-4 bg-red-50">
                                <h4 class="text-md font-medium text-red-900 mb-3">Zone de danger</h4>
                                <p class="text-sm text-red-600 mb-4">
                                    Actions critiques qui peuvent affecter le fonctionnement du système
                                </p>
                                <div class="flex space-x-3">
                                    <button type="button" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                        <i data-lucide="power" class="h-4 w-4 mr-2"></i>
                                        Redémarrer le serveur
                                    </button>
                                    <button type="button" class="inline-flex items-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                        <i data-lucide="database" class="h-4 w-4 mr-2"></i>
                                        Réinitialiser la DB
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Gestion des onglets d'administration
document.querySelectorAll('.admin-tab-button').forEach(button => {
    button.addEventListener('click', function() {
        const tabName = this.getAttribute('data-tab');
        
        // Masquer tous les contenus d'onglets
        document.querySelectorAll('.admin-tab-content').forEach(content => {
            content.classList.add('hidden');
        });
        
        // Réinitialiser tous les boutons d'onglets
        document.querySelectorAll('.admin-tab-button').forEach(btn => {
            btn.classList.remove('border-red-500', 'text-red-600');
            btn.classList.add('border-transparent', 'text-gray-500');
        });
        
        // Activer l'onglet sélectionné
        this.classList.remove('border-transparent', 'text-gray-500');
        this.classList.add('border-red-500', 'text-red-600');
        
        // Afficher le contenu de l'onglet
        document.getElementById(tabName + '-tab').classList.remove('hidden');
    });
});
</script>
<% }) %>