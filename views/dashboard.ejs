<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - FlashbackFA Enterprise</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center space-x-3">
                    <div class="p-2 bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg">
                        <i data-lucide="server" class="h-6 w-6 text-white"></i>
                    </div>
                    <div>
                        <h1 class="text-xl font-bold">FlashbackFA Enterprise</h1>
                        <p class="text-xs text-gray-500">Management System</p>
                    </div>
                </div>
                
                <div class="flex items-center space-x-4">
                    <div class="flex items-center space-x-3">
                        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png?size=128" 
                             alt="<%= user.username %>" 
                             class="w-8 h-8 rounded-full"
                             onerror="this.src='https://cdn.discordapp.com/embed/avatars/0.png'">
                        <div>
                            <p class="text-sm font-medium"><%= user.username %></p>
                            <p class="text-xs text-gray-500"><%= user.role %></p>
                        </div>
                    </div>
                    <a href="/logout" class="text-red-600 hover:text-red-700 p-2 rounded-md hover:bg-red-50">
                        <i data-lucide="log-out" class="h-5 w-5"></i>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <!-- Welcome Section -->
        <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl p-8 text-white mb-8">
            <h2 class="text-3xl font-bold mb-2">Bienvenue, <%= user.username %> !</h2>
            <p class="text-blue-100">Tableau de bord FlashbackFA Enterprise</p>
        </div>

        <!-- Stats -->
        <div class="grid gap-6 md:grid-cols-3 mb-8">
            <div class="bg-white rounded-xl p-6 shadow-sm">
                <div class="flex items-center justify-between mb-4">
                    <div class="p-3 rounded-xl bg-blue-100">
                        <i data-lucide="building" class="h-6 w-6 text-blue-600"></i>
                    </div>
                    <div class="text-right">
                        <div class="text-2xl font-bold"><%= stats.total_enterprises %></div>
                        <p class="text-sm text-gray-500">Entreprises</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-sm">
                <div class="flex items-center justify-between mb-4">
                    <div class="p-3 rounded-xl bg-green-100">
                        <i data-lucide="users" class="h-6 w-6 text-green-600"></i>
                    </div>
                    <div class="text-right">
                        <div class="text-2xl font-bold"><%= stats.total_employees %></div>
                        <p class="text-sm text-gray-500">Employés</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-sm">
                <div class="flex items-center justify-between mb-4">
                    <div class="p-3 rounded-xl bg-purple-100">
                        <i data-lucide="trending-up" class="h-6 w-6 text-purple-600"></i>
                    </div>
                    <div class="text-right">
                        <div class="text-2xl font-bold">€<%= stats.monthly_ca %></div>
                        <p class="text-sm text-gray-500">CA Mensuel</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Enterprises -->
        <div class="bg-white rounded-xl shadow-sm">
            <div class="p-6 border-b">
                <h3 class="text-lg font-semibold">Vos Entreprises</h3>
            </div>
            <div class="p-6">
                <% if (enterprises && enterprises.length > 0) { %>
                    <div class="grid gap-4 md:grid-cols-2">
                        <% enterprises.forEach(function(enterprise) { %>
                        <div class="p-4 border rounded-lg">
                            <h4 class="font-medium"><%= enterprise.name %></h4>
                            <p class="text-sm text-gray-600"><%= enterprise.type %></p>
                            <p class="text-xs text-gray-500">Guild: <%= enterprise.guild_id %></p>
                        </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="text-center py-8">
                        <i data-lucide="building" class="h-12 w-12 text-gray-400 mx-auto mb-4"></i>
                        <p class="text-gray-600">Aucune entreprise trouvée</p>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <script>
        lucide.createIcons();
    </script>
</body>
</html>