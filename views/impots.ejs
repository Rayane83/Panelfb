<%- include('base', { title: title, user: user, body: `
<div class="py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- En-tête -->
        <div class="md:flex md:items-center md:justify-between">
            <div class="flex-1 min-w-0">
                <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
                    Calculs Fiscaux
                </h2>
                <p class="mt-1 text-sm text-gray-500">
                    Simulations et calculs d'impôts pour vos entreprises
                </p>
            </div>
            <div class="mt-4 flex md:mt-0 md:ml-4">
                <button type="button" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <i data-lucide="calculator" class="h-4 w-4 mr-2"></i>
                    Nouvelle Simulation
                </button>
            </div>
        </div>

        <!-- Calculateur rapide -->
        <div class="mt-6 bg-white shadow sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                    Calculateur Rapide
                </h3>
                <div class="grid grid-cols-1 gap-4 sm:grid-cols-4">
                    <div>
                        <label for="base-amount" class="block text-sm font-medium text-gray-700">Montant de base</label>
                        <div class="mt-1 relative rounded-md shadow-sm">
                            <input type="number" id="base-amount" class="focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-3 pr-12 sm:text-sm border-gray-300 rounded-md" placeholder="0.00">
                            <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                <span class="text-gray-500 sm:text-sm">€</span>
                            </div>
                        </div>
                    </div>
                    <div>
                        <label for="tax-type" class="block text-sm font-medium text-gray-700">Type d'impôt</label>
                        <select id="tax-type" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                            <option value="income">Impôt sur le revenu</option>
                            <option value="corporate">Impôt sur les sociétés</option>
                            <option value="vat">TVA</option>
                        </select>
                    </div>
                    <div>
                        <label for="period" class="block text-sm font-medium text-gray-700">Période</label>
                        <input type="month" id="period" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                    </div>
                    <div class="flex items-end">
                        <button type="button" id="calculate-btn" class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            <i data-lucide="calculator" class="h-4 w-4 mr-2"></i>
                            Calculer
                        </button>
                    </div>
                </div>
                
                <!-- Résultat du calcul -->
                <div id="calculation-result" class="mt-6 hidden">
                    <div class="bg-gray-50 rounded-lg p-4">
                        <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
                            <div class="text-center">
                                <div class="text-2xl font-bold text-gray-900" id="calculated-tax">0 €</div>
                                <div class="text-sm text-gray-500">Impôt calculé</div>
                            </div>
                            <div class="text-center">
                                <div class="text-2xl font-bold text-gray-900" id="effective-rate">0%</div>
                                <div class="text-sm text-gray-500">Taux effectif</div>
                            </div>
                            <div class="text-center">
                                <div class="text-2xl font-bold text-gray-900" id="net-amount">0 €</div>
                                <div class="text-sm text-gray-500">Montant net</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Historique des simulations -->
        <div class="mt-6 bg-white shadow overflow-hidden sm:rounded-md">
            <div class="px-4 py-5 sm:px-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900">
                    Historique des Simulations
                </h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">
                    Vos dernières simulations fiscales
                </p>
            </div>
            <ul class="divide-y divide-gray-200">
                <% if (simulations && simulations.length > 0) { %>
                    <% simulations.forEach(function(simulation) { %>
                    <li>
                        <div class="px-4 py-4 sm:px-6">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0">
                                        <div class="h-10 w-10 rounded-full bg-green-100 flex items-center justify-center">
                                            <i data-lucide="receipt" class="h-5 w-5 text-green-600"></i>
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <div class="flex items-center">
                                            <p class="text-sm font-medium text-indigo-600 truncate">
                                                <%= simulation.tax_type %> - <%= simulation.period %>
                                            </p>
                                            <% if (simulation.enterprises) { %>
                                            <p class="ml-2 text-sm text-gray-500">
                                                - <%= simulation.enterprises.name %>
                                            </p>
                                            <% } %>
                                        </div>
                                        <div class="mt-1 flex items-center text-sm text-gray-500">
                                            <p>
                                                Base: <%= new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR' }).format(simulation.base_amount) %>
                                            </p>
                                            <p class="ml-4">
                                                Impôt: <%= new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR' }).format(simulation.calculated_tax) %>
                                            </p>
                                            <p class="ml-4">
                                                Taux: <%= simulation.effective_rate %>%
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-2">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        Simulation
                                    </span>
                                    <div class="flex items-center space-x-1">
                                        <button class="text-indigo-600 hover:text-indigo-900 text-sm font-medium">
                                            <i data-lucide="eye" class="h-4 w-4"></i>
                                        </button>
                                        <button class="text-gray-600 hover:text-gray-900 text-sm font-medium">
                                            <i data-lucide="download" class="h-4 w-4"></i>
                                        </button>
                                        <button class="text-red-600 hover:text-red-900 text-sm font-medium">
                                            <i data-lucide="trash-2" class="h-4 w-4"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <% }); %>
                <% } else { %>
                    <li>
                        <div class="px-4 py-8 text-center">
                            <i data-lucide="receipt" class="mx-auto h-12 w-12 text-gray-400"></i>
                            <h3 class="mt-2 text-sm font-medium text-gray-900">Aucune simulation</h3>
                            <p class="mt-1 text-sm text-gray-500">
                                Commencez par effectuer votre première simulation fiscale.
                            </p>
                        </div>
                    </li>
                <% } %>
            </ul>
        </div>

        <!-- Barèmes fiscaux -->
        <div class="mt-6 bg-white shadow sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                    Barèmes Fiscaux 2024
                </h3>
                <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
                    <!-- Impôt sur le revenu -->
                    <div>
                        <h4 class="text-md font-medium text-gray-900 mb-3">Impôt sur le revenu</h4>
                        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
                            <table class="min-w-full divide-y divide-gray-300">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Tranche</th>
                                        <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Taux</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    <tr>
                                        <td class="px-3 py-2 text-sm text-gray-900">0 € à 10 777 €</td>
                                        <td class="px-3 py-2 text-sm text-gray-900">0%</td>
                                    </tr>
                                    <tr>
                                        <td class="px-3 py-2 text-sm text-gray-900">10 778 € à 27 478 €</td>
                                        <td class="px-3 py-2 text-sm text-gray-900">11%</td>
                                    </tr>
                                    <tr>
                                        <td class="px-3 py-2 text-sm text-gray-900">27 479 € à 78 570 €</td>
                                        <td class="px-3 py-2 text-sm text-gray-900">30%</td>
                                    </tr>
                                    <tr>
                                        <td class="px-3 py-2 text-sm text-gray-900">78 571 € à 168 994 €</td>
                                        <td class="px-3 py-2 text-sm text-gray-900">41%</td>
                                    </tr>
                                    <tr>
                                        <td class="px-3 py-2 text-sm text-gray-900">Au-delà de 168 994 €</td>
                                        <td class="px-3 py-2 text-sm text-gray-900">45%</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Impôt sur les sociétés -->
                    <div>
                        <h4 class="text-md font-medium text-gray-900 mb-3">Impôt sur les sociétés</h4>
                        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
                            <table class="min-w-full divide-y divide-gray-300">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Tranche</th>
                                        <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Taux</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    <tr>
                                        <td class="px-3 py-2 text-sm text-gray-900">0 € à 42 500 €</td>
                                        <td class="px-3 py-2 text-sm text-gray-900">15%</td>
                                    </tr>
                                    <tr>
                                        <td class="px-3 py-2 text-sm text-gray-900">Au-delà de 42 500 €</td>
                                        <td class="px-3 py-2 text-sm text-gray-900">25%</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('calculate-btn').addEventListener('click', function() {
    const baseAmount = parseFloat(document.getElementById('base-amount').value) || 0;
    const taxType = document.getElementById('tax-type').value;
    const period = document.getElementById('period').value;
    
    if (baseAmount <= 0) {
        alert('Veuillez saisir un montant valide');
        return;
    }
    
    let calculatedTax = 0;
    let effectiveRate = 0;
    
    // Calcul simplifié selon le type d'impôt
    if (taxType === 'income') {
        // Barème progressif de l'impôt sur le revenu
        if (baseAmount <= 10777) {
            calculatedTax = 0;
        } else if (baseAmount <= 27478) {
            calculatedTax = (baseAmount - 10777) * 0.11;
        } else if (baseAmount <= 78570) {
            calculatedTax = (27478 - 10777) * 0.11 + (baseAmount - 27478) * 0.30;
        } else if (baseAmount <= 168994) {
            calculatedTax = (27478 - 10777) * 0.11 + (78570 - 27478) * 0.30 + (baseAmount - 78570) * 0.41;
        } else {
            calculatedTax = (27478 - 10777) * 0.11 + (78570 - 27478) * 0.30 + (168994 - 78570) * 0.41 + (baseAmount - 168994) * 0.45;
        }
    } else if (taxType === 'corporate') {
        // Impôt sur les sociétés
        if (baseAmount <= 42500) {
            calculatedTax = baseAmount * 0.15;
        } else {
            calculatedTax = 42500 * 0.15 + (baseAmount - 42500) * 0.25;
        }
    } else if (taxType === 'vat') {
        // TVA à 20%
        calculatedTax = baseAmount * 0.20;
    }
    
    effectiveRate = baseAmount > 0 ? (calculatedTax / baseAmount * 100) : 0;
    const netAmount = baseAmount - calculatedTax;
    
    // Affichage des résultats
    document.getElementById('calculated-tax').textContent = new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR' }).format(calculatedTax);
    document.getElementById('effective-rate').textContent = effectiveRate.toFixed(2) + '%';
    document.getElementById('net-amount').textContent = new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR' }).format(netAmount);
    
    document.getElementById('calculation-result').classList.remove('hidden');
});
</script>
` }) %>